# Environment Variables Template
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=your-postgresql-database-url

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key

# Session Secret (generate a strong random string)
SESSION_SECRET=your-session-secret-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/callback/google

# Gmail API Configuration
GMAIL_REDIRECT_URI=http://localhost:5000/api/auth/callback/gmail

# Microsoft OAuth Configuration (for Outlook)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:5000/api/auth/callback/outlook

# Environment
NODE_ENV=development

# Port (optional - defaults to 5000)
PORT=5000